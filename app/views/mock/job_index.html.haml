= content_for :head do
  = javascript_include_tag '/javascripts/lib/jquery-plugin/jcarousellite_1.0.1.min.js'
  = stylesheet_link_tag "/stylesheets/job_index.css"
  :javascript
      $(function() {
        $(".head").click(function(){
          $(this).next().slideToggle("fast");
        });
        $("#posts1").jCarouselLite({
          btnNext: "#next1",
          btnPrev: "#prev1",
          visible: 6
        });
      });
- if @category
  - if [2,3].index(@category.id)
    - contests = Mock::Contest.find_by_category(1)
  - else
    - contests = Mock::Contest.find_by_category(@category.id)
- else
  - contests = Mock::Contest.all
#contest-area
  .title{:style => 'margin-bottom:20px;'}
    %h3= "#{@category ? @category.name : '全ての'} コンテスト"
  / .contents
  /   %i.icon-chevron-left.left#prev1
  /   #posts1.posts.left
  /     %ul
  /       - images = []
  /       - contests.each do |contest|
  /         - contest.logo.times do |i|
  /           - images.push("#{contest.id}-#{i+1}")
  /       - images.sort_by{rand}.each do |image|
  /         %li
  /           %a{:href=>"/mock/job_application?id=#{image}"}
  /             = image_tag "/images/mock/contests/#{image}-square.jpg", :size => '98x98', :alt => ''
  /   %i.icon-chevron-right.left#next1
  /   .clear
.sidebar
  %h4.content-title 条件検索
  %form
    .condition
      .head
        ▼ キーワード
      .contents{:style=>'display:block;'}
        %input.span3{:type=>'text'}
    .condition
      .head
        ▼ カテゴリ
      .contents
        %select
          %option カテゴリ1
          %option カテゴリ2
          %option　カテゴリ3
    .condition
      .head
        ▼ インダストリー
      .contents
        %select
          %option インダストリー1
          %option インダストリー2
          %option　インダストリー3
    .condition
      .head
        ▼ 賞金
      .contents
        ¥&nbsp;
        %input{:type=>'text', :style=> 'width:70px;'}
        &nbsp;〜&nbsp;
        %input{:type=>'text', :style=> 'width:70px;'}
    .condition
      .head
        ▼ ロゴタイプ
      .contents
        %table.logo-select-area
          %tr
            %td
              %p.image= image_tag '/images/mock/logo-type/abstruct.png', :size => '100x100'
              = check_box_tag( :sample, 1 )
              アブストラクト
            %td
              %p.image= image_tag '/images/mock/logo-type/brush.png', :size => '100x100'
              = check_box_tag( :sample, 1 )
              筆文字
          %tr
            %td
              %p.image= image_tag '/images/mock/logo-type/character.png', :size => '100x100'
              = check_box_tag( :sample, 1 )
              キャラクター
            %td
              %p.image= image_tag '/images/mock/logo-type/emblem.png', :size => '100x100'
              = check_box_tag( :sample, 1 )
              エンブレム
          %tr
            %td
              %p.image= image_tag '/images/mock/logo-type/letterform.png', :size => '100x100'
              %br
              = check_box_tag( :sample, 1 )
              レターフォーム
            %td
              %p.image= image_tag '/images/mock/logo-type/picturemark.png', :size => '100x100'
              %br
              = check_box_tag( :sample, 1 )
              ピクチャーマーク
          %tr
            %td
              %p.image= image_tag '/images/mock/logo-type/wordmark.png', :size => '100x100'
              = check_box_tag( :sample, 1 )
              ワードマーク
    .right
      %a.btn.btn-info
        検索
.content-wrap
  %h4.content-title= "#{@category ? @category.name : '全ての'}コンテスト一覧"
  %table.table.table-striped.text-center
    %tbody
      %tr.center
        %th{:style=>'text-align:center;width:210px;'} タイトル
        %th{:style=>'text-align:center;'} クライアント
        %th{:style=>'text-align:center;'} 残り時間
        %th{:style=>'text-align:center;'} デザイン数
        %th{:style=>'text-align:center;'} 賞金
        %th{:style=>'text-align:center;'} ステータス
      - contests.each_with_index do |contest,index|
        %tr
          %td{:style=>'text-align:center;'}= link_to contest.title , mock_job_detail_path(:id => contest.id)
          %td{:style=>'text-align:center;'}= contest.client
          %td{:style=>'text-align:center;'}= "#{contest.time}時間"
          %td{:style=>'text-align:center;'}= contest.design 
          %td{:style=>'text-align:center;'}= "¥#{contest.price}"
          %td.status{:style=>'text-align:center;'}= image_tag "/images/mock/contest-type/_12d_icon_#{index.even? ? 'manymore' : 'private'}.png", :size => '20x20'
.clear
