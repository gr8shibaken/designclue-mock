= content_for :head do
  = javascript_include_tag '/javascripts/lib/jquery-plugin/jcarousellite_1.0.1.min.js'
  = stylesheet_link_tag "/stylesheets/job_index.css"
  :javascript
      $(function() {
        $(".head").click(function(){
          $(this).next().slideToggle("fast");
        });
        $("#posts1").jCarouselLite({
          btnNext: "#next1",
          btnPrev: "#prev1",
          visible: 6
        });
      });
#contest-area
  .title
    %h3= "#{@category ? @category : 'All'} Contests"
  .contents
    %i.icon-chevron-left.left#prev1
    #posts1.posts.left
      %ul
        - 10.times do |i|
          %li= image_tag "/images/mock/logo/logo#{i+1}.jpg", :size => '98x98', :alt => ''
    %i.icon-chevron-right.left#next1
    .clear
.sidebar
  %h4.content-title 条件検索
  %form
    .condition
      .head
        ▼ キーワード
      .contents
        %input.span3{:type=>'text'}
    .condition
      .head
        ▼ カテゴリ
      .contents
        %select
          %option カテゴリ1
          %option カテゴリ2
          %option　カテゴリ3
    .condition
      .head
        ▼ インダストリー
      .contents
        %select
          %option インダストリー1
          %option インダストリー2
          %option　インダストリー3
    .condition
      .head
        ▼ 賞金
      .contents
        ¥&nbsp;
        %input{:type=>'text', :style=> 'width:70px;'}
        &nbsp;〜&nbsp;
        %input{:type=>'text', :style=> 'width:70px;'}
    .condition
      .head
        ▼ ロゴタイプ
      .contents
        %table.logo-select-area
          %tr
            %td
              %p.image= image_tag '/images/mock/logo-type/abstruct.png', :size => '100x100'
              = check_box_tag( :sample, 1 )
              アブストラクト
            %td
              %p.image= image_tag '/images/mock/logo-type/brush.png', :size => '100x100'
              = check_box_tag( :sample, 1 )
              筆文字
          %tr
            %td
              %p.image= image_tag '/images/mock/logo-type/character.png', :size => '100x100'
              = check_box_tag( :sample, 1 )
              キャラクター
            %td
              %p.image= image_tag '/images/mock/logo-type/emblem.png', :size => '100x100'
              = check_box_tag( :sample, 1 )
              エンブレム
          %tr
            %td
              %p.image= image_tag '/images/mock/logo-type/letterform.png', :size => '100x100'
              %br
              = check_box_tag( :sample, 1 )
              レターフォーム
            %td
              %p.image= image_tag '/images/mock/logo-type/picturemark.png', :size => '100x100'
              %br
              = check_box_tag( :sample, 1 )
              ピクチャーマーク
          %tr
            %td
              %p.image= image_tag '/images/mock/logo-type/wordmark.png', :size => '100x100'
              = check_box_tag( :sample, 1 )
              ワードマーク
    .right
      %a.btn.btn-info
        検索
.content-wrap
  %h4.content-title オープンコンテスト一覧
  %table.table.table-striped.text-center
    %tbody
      %tr.center
        %th コンテストタイトル
        %th クライアント
        %th 時間
        %th エントリー
        %th 賞金
        %th ステータス
      - 9.times do |i|
        %tr
          %td= link_to "コンテスト#{i+1}",mock_job_detail_path
          %td 
          %td １週間
          %td 
          %td ¥40,000
          %td.status= image_tag "/images/mock/contest-type/_12d_icon_#{i.even? ? 'manymore' : 'private'}.png", :size => '20x20'
.clear