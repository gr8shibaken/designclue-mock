                %td
                %td
              %tr
                %td.explain-popover{:rel=>'popover',:'data-title'=>"#{ai_title}",:'data-content'=>"#{ai_explain}" }
                  = check_box_tag( :sample, 1 )+"#{ai_title}"
                %td.explain-popover{:rel=>'popover',:'data-title'=>"#{png_title}",:'data-content'=>"#{png_explain}" }
                  = check_box_tag( :sample, 1 )+"#{png_title}"
                %td
                %td
              %tr
                %td.explain-popover{:rel=>'popover',:'data-title'=>"#{indesign_title}",:'data-content'=>"#{indesign_explain}" }
                  = check_box_tag( :sample, 1 )+"#{indesign_title}"
                %td
                %td
                %td
                .clear
          
          .input-area
            %h5 デザインの主な色は何色ですか？ ＊
            .color-select
              = radio_button_tag(:color_select, 1, true)
              代表的な色から選ぶ
              .selectsample
                - 3.times do
                  %select{:style => 'width:200px'}
                    %option ------------ 
                    %option レッド 
                    %option オレンジ
                    %option イエロー
                    %option グリーン
                    %option ブルー
                    %option パープル
                    %option ブラウン
                    %option ホワイト
                    %option ブラック
                  %br
              = radio_button_tag(:color_select, 1)
              詳細な色を設定する
              .freeinput
                - 3.times do
                  .form-inline
                    %i= image_tag "/images/mock/color-picker/colorsample.png", :size => '25x25'
                    %label #
                    %input{:type=>'text', :style => 'width:100px', :placeholder => "cccc00"}   
          
          .input-area
            %h5 できれば入れて欲しいパーツ・モノは何ですか？ ＊
            .parts-select
              %form.form-inline
                %input{:type=>'text', :style => 'width:150px', :placeholder => "炎" }   
