              %tr
                %td.explain-popover{:rel=>'popover',:'data-title'=>"#{eps_title}",:'data-content'=>"#{eps_explain}" }
                  = check_box_tag( :sample, 1 )+"#{eps_title}"
                %td.explain-popover{:rel=>'popover',:'data-title'=>"#{gif_title}",:'data-content'=>"#{gif_explain}" }
