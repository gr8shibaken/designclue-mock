= content_for :head do
  = javascript_include_tag '/javascripts/lib/jquery-plugin/jqModal.js'
  = stylesheet_link_tag "/stylesheets/job_post_2.css"
  = stylesheet_link_tag "/stylesheets/jqModal.css"

  :javascript
    $(function() {
      $(".explain-popover").popover({
      });
    }); 
    $(function() {  
      $('#dialog').jqm({ modal: true });    
    });

#dialog.jqmWindow
  %a.jqmClose.right{:href => "#"}= image_tag "/images/mock/color-picker/colorpic.png", :size => '500x500'

.wrap
  %ul.breadcrumb
    %li 1. カテゴリ/プラン選択
    %span.divider ｜
    %li.active 2. 依頼内容の入力
    %span.divider ｜
    %li 3. 依頼内容の確認
    %span.divider ｜
    %li 4. 支払方法の選択
    %span.divider ｜
    %li 5.支払内容の確認
    %span.divider ｜
    %li 6.完了

  %h3 2. コンテスト情報入力
  .content-wrap
    %form
      %fieldset
        .form-vertical   
          .input-area
            %h5 ロゴの表記名は何ですか？ ＊
            .logoname-select
              %input{:type=>'text', :style => 'width:400px', :placeholder => "例：designclue"}   

          .input-area
            %h5 キャッチコピーやスローガンなどサブタイトルを入れる場合はご記入ください
            .subname-select
              %input{:type=>'text', :style => 'width:400px', :placeholder => "例：Cross Border Communications for Your Business"}   

          .input-area
            %h5 募集期間は何日間ですか？ ＊
            .timelimit-select
              %select{:style => 'width:200px'}
                %option 10days
                %option 2days
                %option 3days
                %option 4days
                %option 5days
                %option 7days
                %option 13days
                %option 15days
              %span= "終了時刻: #{Time.now.strftime("%m")}月#{Time.now.strftime("%d")}日#{Time.now.strftime("%H")}時#{Time.now.strftime("%M")}分" 
         
          .input-area
            %h5 あなたのビジネスは何ですか？ ＊ 
            .industry-select
              .industry1
                ジャンル
              .industry2
                詳細
              .form-inline
                %select{:style => 'width:250px'}
                  %option ------------ 
                  %option 自営業
                  %option 非営利団体
                  %option 情報通信業
                  %option ソフトウェア業
                  %option インターネット附随サービス業
                  %option 音楽・映像情報制作
                  %option サービス業
                  %option エンターテイメント業
                  %option アパレル業
                  %option 卸売業/小売業
                  %option 教育業
                  %option 士業
                  %option 不動産業
                  %option 飲食店業
                  %option 宿泊業
                  %option 金融業/保険業

                %label 
                = "> "
                %select{:style => 'width:250px'}
                  %option ------------ 
                  %option ソーシャルゲーム開発/提供
                  %option フューチャーフォンアプリ開発/提供
                  %option スマートフォンアプリ開発/提供
                  %option ソフトウェア開発/提供
                  %option ホームページ制作
                  %option ポータルサイト運営
                  %option コンテンツプロバイダー
                  %option ウェブコンテンツ
                  %option クラウドサービス
                  %option インターネット通信販売
                  %option インターネット決済
                  %option セキュリティサービス
                  %option 広告販売販売
          
          .input-area
            .form-vertical
              %h5 利用用途は何ですか？ ＊
              .purpose-select
                %div= check_box_tag( :category, "1")+' オンライン' 
                %div= check_box_tag( :category, "1")+' 印刷物' 
                %div= check_box_tag( :category, "1")+' グッズ、パッケージ'
                %div= check_box_tag( :category, "1")+' 看板'
                %div= check_box_tag( :category, "1")+' その他'
          
          - tooltip_data = Mock::Tooltip.tooltip_read
          - openformat_title  =tooltip_data["titles"]["openformat_title"]
          - psd_title         =tooltip_data["titles"]["psd_title"]
          - eps_title         =tooltip_data["titles"]["eps_title"]
          - ai_title          =tooltip_data["titles"]["ai_title"]
          - indesign_title    =tooltip_data["titles"]["indesign_title"]
          - jpg_title         =tooltip_data["titles"]["jpg_title"]
          - gif_title         =tooltip_data["titles"]["gif_title"]
          - png_title         =tooltip_data["titles"]["png_title"]
          - pdf_title         =tooltip_data["titles"]["pdf_title"]
          - other_title       =tooltip_data["titles"]["other_title"]
          - openformat_explain=tooltip_data["explains"]["other_explain"]
          - psd_explain       =tooltip_data["explains"]["psd_explain"]
          - eps_explain       =tooltip_data["explains"]["eps_explain"]
          - ai_explain        =tooltip_data["explains"]["ai_explain"]
          - indesign_explain  =tooltip_data["explains"]["indesign_explain"]
          - jpg_explain       =tooltip_data["explains"]["jpg_explain"]
          - gif_explain       =tooltip_data["explains"]["gif_explain"]
          - png_explain       =tooltip_data["explains"]["png_explain"]
          - pdf_explain       =tooltip_data["explains"]["pdf_explain"]
          - other_explain     =tooltip_data["explains"]["other_explain"]
          .input-area
            %h5 希望する納品フォーマットを選んでください ＊
            %table.table-bordered.table-striped.format-select
              %tr
                %th.explain-popover{:rel=>'popover',:'data-title'=>"#{openformat_title}",:'data-content'=>"#{openformat_explain}" }
                  = "#{openformat_title}"
                %th Online
                %th Print
                %th Others
              %tr
                %td
                  = check_box_tag( :sample, 1 )+"#{psd_title}"
                  .explain-popover.icon-question-sign{:rel=>'popover',:'data-title'=>"#{psd_title}",:'data-content'=>"#{psd_explain}" }
                %td
                  = check_box_tag( :sample, 1 )+"#{jpg_title}"
                  .explain-popover.icon-question-sign{:rel=>'popover',:'data-title'=>"#{jpg_title}",:'data-content'=>"#{jpg_explain}" }
                %td
                  = check_box_tag( :sample, 1 )+"#{pdf_title}"
                  .explain-popover.icon-question-sign{:rel=>'popover',:'data-title'=>"#{pdf_title}",:'data-content'=>"#{pdf_explain}" }
                %td
                  = check_box_tag( :sample, 1 )+"#{other_title}"
                  .explain-popover.icon-question-sign{:rel=>'popover',:'data-title'=>"#{other_title}",:'data-content'=>"#{other_explain}" }
              %tr
                %td
                  = check_box_tag( :sample, 1 )+"#{eps_title}"
                  .explain-popover.icon-question-sign{:rel=>'popover',:'data-title'=>"#{eps_title}",:'data-content'=>"#{eps_explain}" }
                %td
                  = check_box_tag( :sample, 1 )+"#{gif_title}"
                  .explain-popover.icon-question-sign{:rel=>'popover',:'data-title'=>"#{gif_title}",:'data-content'=>"#{gif_explain}" }
                %td
                %td
              %tr
                %td
                  = check_box_tag( :sample, 1 )+"#{ai_title}"
                  .explain-popover.icon-question-sign{:rel=>'popover',:'data-title'=>"#{ai_title}",:'data-content'=>"#{ai_explain}" }
                %td
                  = check_box_tag( :sample, 1 )+"#{png_title}"
                  .explain-popover.icon-question-sign{:rel=>'popover',:'data-title'=>"#{png_title}",:'data-content'=>"#{png_explain}" }
                %td
                %td
              %tr
                %td
                  = check_box_tag( :sample, 1 )+"#{indesign_title}"
                  .explain-popover.icon-question-sign{:rel=>'popover',:'data-title'=>"#{indesign_title}",:'data-content'=>"#{indesign_explain}" }
                %td
                %td
                %td
                .clear
            %div※デザイナーの制作ツールにより納品するフォーマットが異なります。
            %div※フォーマット・選択したフォーマット数による価格の変動はありません。
          
          .input-area
            %h5 コーポレートカラーは何色ですか？ ＊
            .color-select
              .selectsample.left{:style=>"margin-right:60px;"}
                = radio_button_tag(:color_select, 1, true)
                代表的な色から選ぶ
                %div
                - 3.times do
                  %select{:style => 'width:200px'}
                    %option ------------ 
                    %option レッド 
                    %option オレンジ
                    %option イエロー
                    %option グリーン
                    %option ブルー
                    %option パープル
                    %option ブラウン
                    %option ホワイト
                    %option ブラック
                  %br
              .freeinput.left
                = radio_button_tag(:color_select, 1)
                詳細な色を設定する
                -3.times do
                  .form-inline
                    %a.jqModal.left{:href=>"#"}= image_tag "/images/mock/color-picker/colorsample.png", :size => '25x25'
                    %label #
                    %input{:type=>'text',:style=>'width:100px; margin-bottom:5px;',:placeholder=>"cccc00"}   
              .clear 
          .input-area
            %h5 象徴的なオブジェクトが必要な場合はご記入ください
            .parts-select
              %form.form-inline
                %input{:type=>'text', :style => 'width:150px', :placeholder => "例：炎" }   

          .input-area
            %h5 あなたのイメージをイメージメーターで表現してください
            %table
              %tr
                %td 男性的 
                %td.form-inline
                  %input{:type=>'range', :style => 'width:200px'}   
                  女性的 
              %tr
                %td 四角っぽい
                %td.form-inline
                  %input{:type=>'range', :style => 'width:200px'}   
                  丸っぽい
              %tr
                %td シンプル
                %td.form-inline
                  %input{:type=>'range', :style => 'width:200px'}   
                  複雑
              %tr
                %td ポップ
                %td.form-inline
                  %input{:type=>'range', :style => 'width:200px'}   
                  シック
              %tr
                %td 平面的
                %td.form-inline
                  %input{:type=>'range', :style => 'width:200px'}   
                  立体的
          
          .input-area
            %h5 希望するロゴのタイプを選択してください＊
            .logotype-select-area
              %table
                %tr
                  %td
                    %p.image= image_tag '/images/mock/logo-type/textual.gif', :size => '100x100'
                    = check_box_tag( :sample, 1 )
                    テキスト 
                  %td
                    %p.image= image_tag '/images/mock/logo-type/illustrative.gif', :size => '100x100'
                    = check_box_tag( :sample, 1 )
                    複合マーク
                  %td
                    %p.image= image_tag '/images/mock/logo-type/iconic.gif', :size => '100x100'
                    = check_box_tag( :sample, 1 )
                    シンボル

          .input-area
            %h5 どのような系統のロゴが良いですか？ ＊
            .logostyle-select-area
              %table
                %tr
                  %td
                    %p.image= image_tag '/images/mock/logo-type/wordmark.jpg', :size => '100x100'
                    = check_box_tag( :sample, 1 )
                    ワードマーク 
                  %td
                    %p.image= image_tag '/images/mock/logo-type/picturemark.jpg', :size => '100x100'
                    = check_box_tag( :sample, 1 )
                    ピクチャーマーク
                  %td
                    %p.image= image_tag '/images/mock/logo-type/abstruct.jpg', :size => '100x100'
                    = check_box_tag( :sample, 1 )
                    抽象スタイル
                  %td
                    %p.image= image_tag '/images/mock/logo-type/letterform.jpg', :size => '100x100'
                    = check_box_tag( :sample, 1 )
                    頭文字マーク
                %tr
                  %td
                    %p.image= image_tag '/images/mock/logo-type/emblem.jpg', :size => '100x100'
                    = check_box_tag( :sample, 1 )
                    エンブレム
                  %td
                    %p.image= image_tag '/images/mock/logo-type/character.jpg', :size => '100x100'
                    = check_box_tag( :sample, 1 )
                    キャラクター
                  %td
                    %p.image= image_tag '/images/mock/logo-type/brush.jpg', :size => '100x100'
                    = check_box_tag( :sample, 1 )
                    筆文字スタイル
                  %td
                    %p.image= image_tag '/images/mock/logo-type/Web2.0.jpg', :size => '100x100'
                    = check_box_tag( :sample, 1 )
                    web2.0スタイル
              
          .input-area
            %h5 お気に入りのデザインがあればファイルを添付してください
    
            .clipping-area#clipping
              -3.times do
                .inline
                %a.image.design-upload{:href=>"#clipping",:style=>'width:150px;',:onClick => "$('#designfile').click();"}
                  = image_tag '/images/mock/upload-button/upload_file.png', :size => '100x100'
          
          .input-area
            %h5 参照すべきURLがありますか？（自社サイトや競合サイトなど） 
            .URL-select
              %input{:type=>'text', :style => 'width:300px', :placeholder => "http://"}   
          
          .input-area
            %h5 自由記入欄
            %textarea{:style => 'width:500px'}   

  .btn-area
    %a.previous.btn.btn-inverse{:href => '/mock/job_post_1'}= '戻る'
    %a.next.btn.btn-inverse.right{:href => '/mock/confirm'}= '確認へ進む'
