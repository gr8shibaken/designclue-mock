= content_for :head do
  = stylesheet_link_tag "/stylesheets/payment_confirm.css"

.wrap
  %ul.breadcrumb
    %li 1. カテゴリ/プラン選択
    %span.divider ｜
    %li 2. 依頼内容の入力
    %span.divider ｜
    %li 3. 依頼内容の確認
    %span.divider ｜
    %li 4. 支払方法の選択
    %span.divider ｜
    %li.active 5.支払内容の確認
    %span.divider ｜
    %li 6.完了

  %h3 5.支払い内容の確認
  .content-wrap
    .plan-area
      %h5 トータルコスト
      %table.table{:style=>"margin-left:50px;"}
        %tr
          %td.index
            %b ロゴデザイン依頼コスト
          %td ¥33,000
        %tr
          %td.index
            %b Paypal手数料
          %td ¥12,600
        %tr
          %td.index
            %b トータルコスト
          %td ¥34,260
    .clear
  .content-wrap
    .detail-area
      %h5 決済方法 
      %table.table{:style=>"margin-left:50px;"}
        %tr
          %td.index
            %b Paypal
          %td
        %tr
          %td.index
            %b メールアドレス
          %td kensuke@gmail.com
        %tr
          %td.index
            %b パスワード
          %td ****************
  .btn-area
    .previous.btn.btn-inverse
      %a=link_to_function '戻る', 'history.back()'
    %a.next.btn.btn-inverse.right{:href => '/mock/post_complete'}= '完了する'
