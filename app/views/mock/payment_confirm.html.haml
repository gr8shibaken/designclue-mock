          %td.index
            %b ペイパル手数料
          %td ¥12,600
        %tr
          %td.index
            %b トータルコスト
          %td ¥34,260
    .clear
  .content-wrap
    .detail-area
      %h3 決済方法 
      %table.table
        %tr
          %td.index
            %b Paypal
          %td
        %tr
          %td.index
            %b メールアドレス
          %td kensuke@gmail.com
        %tr
          %td.index
            %b パスワード
          %td ****************
  .btn-area
    %a.previous.btn.btn-inverse{:href => '/mock/payment'}= '戻る'
    %a.next.btn.btn-inverse{:href => '/mock/post_complete'}= '完了する'
