= content_for :head do
  = stylesheet_link_tag "/stylesheets/confirm.css"

.wrap
  %ul.breadcrumb
    %li 1. カテゴリ/プラン選択
    %span.divider ｜
    %li 2. 依頼内容の入力
    %span.divider ｜
    %li.active 3. 依頼内容の確認
    %span.divider ｜
    %li 4. 支払方法の選択
    %span.divider ｜
    %li 5.支払内容の確認
    %span.divider ｜
    %li 6.完了

  %h3 3.依頼内容の確認
  .content-wrap
    .plan-area
      %h5 カテゴリ／プラン
      %table.table{:style=>"margin-left:50px;"}
        %tr
          %td#index
            %b カテゴリ
          %td ロゴデザイン
        %tr
          %td#index
            %b プラン
          %td ベーシックプラン
        %tr
          %td#index
            %b 公開設定
          %td シークレット設定
    .clear
  .content-wrap
    .detail-area
      %h5 依頼内容
      %table.table{:style=>"margin-left:50px;"}
        %tr
          %td#index
            %b ロゴ表記名
          %td Campfire
        %tr
          %td#index
            %b サブタイトル
          %td Micro Patron Platform
        %tr
          %td#index
            %b 募集期間 
          %td 10日間（2012年　4月　15日　18：53）
        %tr
          %td#index
            %b 業種 
          %td ウェブコンテンツ
        %tr
          %td#index
            %b 用途
          %td Web,Online
        %tr
          %td#index
            %b 納品フォーマット
          %td PSD, AI, JPG
        %tr
          %td#index
            %b コーポレートカラー
          %td レッド、イエロー
        %tr
          %td#index
            %b 象徴するオブジェクト
          %td 炎
        %tr
          %td#index
            %b イメージメーター
          %td
            .image{:style=>"width:400px;"}=image_tag '/images/mock/image-meter/image-meter.jpg'
        %tr
          %td#index
            %b ロゴタイプ
          %td
            .image
              =image_tag '/images/mock/logo-type/textual.gif', :size=>'120x120'
            %span テキスト
        %tr
          %td#index
            %b ロゴスタイル
          %td
            .left
              .image
                =image_tag '/images/mock/logo-type/brush.jpg', :size=>'120x120'
              %span 筆文字 
            .left{:style=>"margin-left:10px;"}
              .image
                =image_tag '/images/mock/logo-type/picturemark.jpg', :size=>'120x120'
              %span ピクチャーマーク
            .clear
        %tr
          %td#index
            %b お気に入りロゴ
          %td
            - array = [1,2,3,4,5,6,7,8].sample(2)
            =image_tag "/images/mock/logo/logo#{array[0]}.jpg", :size=>'120x120', :class=>'flyer'
            =image_tag "/images/mock/logo/logo#{array[1]}.jpg", :size=>'120x120', :class=>'flyer'
        %tr
          %td#index
            %b 参照URL
          %td www.kickstarter.com
        %tr
          %td#index
            %b 自由記入欄 
          %td 
  .btn-area
    %a.previous.btn.btn-inverse{:href => '/mock/job_post_2'}= '戻る'
    %a.next.btn.btn-inverse.right{:href => '/mock/payment'}= '支払方法の選択へ進む'
