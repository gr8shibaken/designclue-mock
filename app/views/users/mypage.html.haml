          %tr
            %td
              %a{:href=>''}= image_tag "/images/mock/mypage/icon/view.png", :size=>'30x30'
              = '依頼を見る'
            %td
              %a{:href=>''}= image_tag "/images/mock/mypage/icon/increase.png", :size=>'30x30'
              = '報酬を上げる'
          %tr
