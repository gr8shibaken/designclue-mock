!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "Designclue"
    = csrf_meta_tags
    = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = javascript_include_tag "application"
    = javascript_include_tag "/javascripts/lib/bootstrap/bootstrap-dropdown.js"
    = javascript_include_tag "http://twitter.github.com/bootstrap/1.4.0/bootstrap-modal.js"
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "/stylesheets/common.css"
    :css
      body {
        padding-top: 40px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
    = yield :head
  %body
    = render 'layouts/header'
    .container
      = yield
      = render 'modals/login'
      / %footer
